<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    style="@style/fondo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalles Del Cobro"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewNombreEmpleado_VDetalleCobro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Empleado:"
            android:textColor="@android:color/background_dark"
            android:layout_marginTop="60dp"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/textViewfechaCobro_VDetalleCobro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de Cobro:"
            android:textSize="20sp"
            android:textColor="@android:color/background_dark"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/textViewDiaCobro_VDetalleCobro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dia de Cobro:"
            android:textSize="20sp"
            android:textColor="@android:color/background_dark"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/textViewtHoraCobro_VDetalleCobro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hora de Cobro:"
            android:textSize="20sp"
            android:textColor="@android:color/background_dark"
            android:layout_marginTop="30dp"/>

    </LinearLayout>

</LinearLayout>
