<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Datos Producto"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/textNombreVProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Producto:"
            android:textSize="20sp"
            android:layout_marginTop="60dp"
            android:textColor="@android:color/black"/>


        <TextView
            android:id="@+id/textCategoria_VProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categoria:"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/background_dark"/>


        <TextView
            android:id="@+id/textDescripcion_VProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripcion:"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/background_dark"/>

        <TextView
            android:id="@+id/textCantidad_VProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cantidad:"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/background_dark"/>

        <TextView
            android:id="@+id/textPrecioCompra_VProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio de Compra:"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/background_dark"/>

        <TextView
            android:id="@+id/textPrecioVenta_VProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio de Venta"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/background_dark"/>

    </LinearLayout>
</LinearLayout>
