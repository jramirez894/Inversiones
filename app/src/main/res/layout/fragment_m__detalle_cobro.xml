<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.billy.clientes.DetalleCobro"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalles Del Cobro"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteBuscarEmpleado_DetalleCobro_Mcliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@android:drawable/ic_menu_search"
                android:hint="Nombre Empleado"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/textViewnomEmpleado_DetalleCobro_Mcliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:textColor="@android:color/background_dark"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/textViewtelEmpleado_DetalleCobro_Mcliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:textColor="@android:color/background_dark"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de Cobro"
                android:textSize="20sp"
                android:textColor="@android:color/background_dark"
                android:layout_marginTop="10dp"/>

            <Spinner
                android:id="@+id/spinnerFechaCobro_DetalleCobro_Mcliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
            </Spinner>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DÃ­a de Cobro"
                android:textSize="20sp"
                android:textColor="@android:color/background_dark"
                android:layout_marginTop="10dp"/>

            <Spinner
                android:id="@+id/spinnerDiaCobro_DetalleCobro_Mcliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
            </Spinner>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hora de Cobro"
                android:textSize="20sp"
                android:textColor="@android:color/background_dark"
                android:layout_marginTop="10dp"/>

            <Spinner
                android:id="@+id/spinnerHoraCobro_DetalleCobro_Mcliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
            </Spinner>

        </LinearLayout>

    </ScrollView>

</LinearLayout>