<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewNombreListaPersonalizada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nombre"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/imageViewEditarListaPersonalizada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/editar"
            android:visibility="visible"/>

        <Spinner
            android:id="@+id/spinOrdenListaPersonalizada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"></Spinner>

        <EditText
            android:id="@+id/edit_OrganizarListaPersonalizada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:visibility="gone"
            android:enabled="false"/>
    </LinearLayout>

</LinearLayout>