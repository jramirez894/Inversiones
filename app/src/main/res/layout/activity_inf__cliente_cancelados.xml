<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    style="@style/fondo">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Datos Personales"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre:"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/textViewNombre_VClienteClienteCancelado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre:"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cedula:"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/textViewCedula_VClienteClienteCancelado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cedula:"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Direccion:"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/textViewDireccion_VClienteClienteCancelado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Direccion:"
                android:textColor="@android:color/black"
                android:layout_marginTop="5dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Telefono:"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/textViewTelefono_VClienteClienteCancelado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Telefono:"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Correo:"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/textViewCorreo_VClienteClienteCancelado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Correo:"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre Empresa:"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/textViewNombreEmpresa_VClienteClienteCancelado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre Empresa:"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Direccion Empresa:"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/textViewDireccionEmpresa_ClienteCancelado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Direccion Empresa:"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sugerencia:"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/textViewSugerencia_ClienteCancelado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sugerencia:"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/texViewEstado_ClienteCancelado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estado del Cliente Actualmente:"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinnerEstado_ClienteCancelado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center">

                </Spinner>

                <Button
                    android:id="@+id/buttonConfirmarEstado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ok"
                    android:layout_marginTop="20dp"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>