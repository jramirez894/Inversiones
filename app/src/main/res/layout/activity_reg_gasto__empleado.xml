<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar Gasto"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold"
            android:layout_marginTop="40dp"/>

        <Spinner
            android:id="@+id/spinnerReg_Gasto_Gasto_Empleado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
        </Spinner>

        <TextView
            android:id="@+id/texViewDescripcionGasto_Gasto_Empleado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/editTextValorGasto_Gasto_Empleado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="$"
            android:inputType="number"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/editTextDescripcion_Gasto_Empleado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripcion"
            android:inputType="text"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/editTextFecha_Gasto_Empleado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha"
            android:inputType="date"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/buttonReg_Gasto_Gasto_Empleado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Guardar"/>

    </LinearLayout>


</LinearLayout>
