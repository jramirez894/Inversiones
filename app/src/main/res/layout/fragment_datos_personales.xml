<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.billy.clientes.DatosPersonales"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Datos Personales"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <AutoCompleteTextView
            android:id="@+id/autoCompleteCedulaCliente_AgregarCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Cedula Cliente"
            android:drawableRight="@android:drawable/ic_menu_search"
            android:inputType="number"
            android:completionThreshold="1"/>

    <EditText
        android:id="@+id/editCedula_AgregarCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cedula"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/editNombre_AgregarCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:layout_marginTop="5dp"
        android:inputType="text"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/editDireccion_AgregarCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Direccion"
        android:layout_marginTop="5dp"
        android:inputType="text"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/editTelefono_AgregarCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Telefono"
        android:layout_marginTop="5dp"
        android:inputType="number"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/editCorreo_AgregarCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Correo"
        android:layout_marginTop="5dp"
        android:inputType="textEmailAddress"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/editNombreEmpresa_AgregarCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre Empresa"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/editDireccionEmpresa_AgregarCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Direccion Empresa"
        android:layout_marginTop="5dp"
        android:inputType="text"
        android:textSize="20sp"/>

    </LinearLayout>

    </ScrollView>
</LinearLayout>
